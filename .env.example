# New Pravda Environment Configuration

# Application
APP_NAME="New Pravda"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG="true"

# Database
DATABASE_URL="postgresql+asyncpg://pravda_dev:pravda_dev_password@localhost:5432/pravda_dev_db"

# Redis
REDIS_URL="redis://localhost:6379/0"

# Security
SECRET_KEY="dev-secret-key-change-in-production-12345"

# API
API_HOST="0.0.0.0"
API_PORT="8000"

# CORS (comma-separated)
CORS_ORIGINS="http://localhost:3000,http://127.0.0.1:3000"
ALLOWED_HOSTS="localhost,127.0.0.1,*.pravda-dev.local"

# External APIs (required for AI transformation)
OPENAI_API_KEY="your-openai-api-key-here"
ANTHROPIC_API_KEY="your-anthropic-api-key-here"

# Logging
LOG_LEVEL="INFO"

# News Sources
BBC_RSS_ENABLED="true"
NEWS_FETCH_INTERVAL="300"